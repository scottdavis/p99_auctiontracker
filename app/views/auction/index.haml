#auction_data
	%p
		= link_to('Upload a log file', new_auction_path)
	%table{:cellspacing => 0, :cellpadding => 5}
		%thead
			%tr
				%th
					Item
				%th
					Avg Price
				%th
					Max
				%th
					Min
				%th 
					Times seen
				%th
					10 Day average
				%th
					30 Day average
				%th
		%tbody
		-	@items.each do |item|
			%tr{:class => cycle('alt','')}
				%td
					= item.name
				%td
					= item.auctions.average(:price).round
				%td
					= item.auctions.maximum(:price).round
				%td
					= item.auctions.minimum(:price).round
				%td
					= item.auctions.size
				%td
					- math = item.auctions.average(:price, :conditions => {:time => 10.days.ago..Time.now})
					= math.blank? ? 0.0 : math.round
				%td
					- math = item.auctions.average(:price, :conditions => {:time => 30.days.ago..Time.now})
					= math.blank? ? 0.0 : math.round
				%td 
					= link_to("Remove", auction_path(item, :page => params[:page]), :method => :delete)
	= will_paginate(@items)