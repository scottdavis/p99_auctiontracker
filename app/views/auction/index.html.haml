- content_for :header do
  #search
    %p
      Search:
      - form_for :search, {:url => auction_search_path, :method => :post } do |f| 
        = f.text_field :search, :value => @search
        = f.submit :search
  
#auction_data
  %p
    = link_to('Upload a log file', new_auction_path)
  #pagination
    = letter_pagination(@letter)
  %table{:cellspacing => 0, :cellpadding => 5}
    %thead
      %tr
        %th
          Item
        %th
          Avg Price
        %th
          Max
        %th
          Min
        %th 
          Times seen
        %th
          10 Day average
        %th
          30 Day average
        %th
    %tbody
      -	@items.each do |item|
        - next if item.auctions.blank?
        - prices = item.auctions.map{|a| a.price}.compact.sort
        %tr{:class => cycle('alt','')}
          %td 
            = item.name
          %td
            = item.auctions.average(:price)
          %td
            = item.auctions.maximum(:price)
          %td
            = item.auctions.minimum(:price)
          %td
            = prices.size
          %td
            - math = item.auctions.average(:price, :conditions => {:time => 10.days.ago..Time.now})
            = math.blank? ? 0.0 : math.round
          %td
            - math = item.auctions.average(:price, :conditions => {:time => 30.days.ago..Time.now})
            = math.blank? ? 0.0 : math.round
          %td 
            = link_to("Remove", auction_path(item, :letter => params[:letter]), :method => :delete)
  #pagination
    = letter_pagination(@letter)
