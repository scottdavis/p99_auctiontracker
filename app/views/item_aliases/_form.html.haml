= form_for(@item_alias) do |f|
  - if @item_alias.errors.any?
    #error_explanation
      %h2
        = pluralize(@item_alias.errors.count, "error")
        prohibited this item_alias from being saved:
      %ul
        - @item_alias.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :alias
    %br/
    = f.text_field :alias
  .field
    = f.label :item
    %br/
    = f.text_field :item
  .actions
    = f.submit
