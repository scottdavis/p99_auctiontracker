%html
  %head
    = stylesheet_link_tag 'style'
    = stylesheet_link_tag 'compiled/screen.css'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', 'application', 'js-class', 'excanvas', 'bluff-min'
    %title=@page_title.join(' - ')
  %body{:class => controller_name}
    #wrapper
      #header
        %ul.menu
          %li=link_to('Home', root_path)
          %li=link_to('Upload', new_auction_path)
        %h1.title
          = @page_title.join(' - ')
        #search
          - form_for :search, {:url => auction_search_path, :method => :post } do |f| 
            = f.text_field :search, :value => @search
            = f.submit "Search"
        = yield :header
        %br{:style => 'clear:both'}
      = display_flash
      #content{:class => action_name}
        = yield
      #footer
        %p
          Comments or sugestions
          = mail_to('jetviper21@gmail.com', 'email me', :encode => "javascript")
        - unless @glog.blank?
          %p
            Last log uploaded on 
            = @glog.created_at

    :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-18922373-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();